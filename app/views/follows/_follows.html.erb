<div class="bg-white rounded-t-md shadow mt-4 mx-4">
  <%= link_to user_user_info_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 border-b-2 border-gray-100 hover:border-blue-500 active:bg-gray-200 rounded-t-md">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">もどる</p>
      </div>
    </div>
  <% end %>
  <p class="text-base px-4 pt-4"><b>フォロー</b></p>
  <div class="pb-4">
    <% if follows.empty? %>
      <div class="p-4 h-auto">
        <p class="text-sm text-gray-500">フォローしてるユーザーはいません</p>
      </div>
    <% end %>
    <% follows.each do | user |%>
      <%= link_to user_path(user.follow_id), data: {"turbolinks" => false} do %>
        <div class="flex display-start items-center px-4 py-2 hover:bg-gray-50 active:bg-gray-100">
            <% if user.follow.profile_image? %>
              <%= image_tag user.follow.profile_image.url, class: "w-8" %>
            <% else %>
              <%= image_tag avatar_url(user.follow), class: "w-8" %>
            <% end %>
          <p class="ml-2 text-sm"><%= user.follow.name %></p>
        </div>
      <% end %>
  <% end %>
  </div>
</div>
<div class="grid grid-cols-2 bg-white shadow mx-4 rounded-b-md">
  <%= link_to user_user_follow_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 border-t-2 border-gray-100 hover:border-blue-500 active:bg-gray-200 rounded-bl-md">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">フォロー</p>
      </div>
    </div>
  <% end %>
  <%= link_to user_user_follower_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 border-t-2 border-gray-100 hover:border-blue-500 active:bg-gray-200 rounded-br-md">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">フォロワー</p>
      </div>
    </div>
  <% end %>
</div>