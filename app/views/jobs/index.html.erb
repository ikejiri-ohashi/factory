<%= render "shared/header" %>

<div class="container mx-auto">
  

    <div class="grid grid-cols-3 gap-4">

      <div class="col-span-2 bg-white rounded-md shadow">
        <% @jobs.each do |job|%>
          <div class="p-4 h-auto divide-y divide-gray-400">
            <%= link_to job_path(job.id) do %>
              <%= job.name %><br>
              <%= job.place %><br>
              <%= job.deadline %><br>
              <%= job.category.name %><br>
              <%= job.memo %><br>
              <div class="mb-4">
                <%= job.contact %><br>
              </div>
            <% end %>
              <hr>
          </div>
        <% end %>
      </div>

    
      <div class="col-span-1">
        <div class="bg-white h-64 mb-4 p-2 rounded-md shadow">
          box1
        </div>
        <div class="bg-white h-64 p-2 rounded-md shadow">
          box2
        </div>
      </div>
      
    </div>


  
</div>

<%= render "shared/footer" %>