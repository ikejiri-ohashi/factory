<%= render "shared/header" %>

<div class="container mx-auto">
  <div class="grid grid-cols-3 gap-4">
    <div class="col-span-2 bg-white rounded-md shadow">
      <div class="p-4 h-auto">
        <div class="flex justify-between mb-6">
          <div class="flex items-center">
            <span class="material-icons">work</span>
            <p class="ml-2 text-2xl">依頼内容詳細</p>
          </div>
          <% if @contract != nil && @contract.job_id == @job.id %>
            <div class="flex items-center rounded-md border-2 border-green-500">
              <span class="material-icons">done</span><p class="mx-2">募集は終了しました</p>
            </div>
          <% else %>
            <% if current_user == @job.user %>
              <div class="bg-gray-500 h-8 rounded-md flex items-center">
                <%= link_to image_tag("delete.png", class:"w-6"), job_path, class: "p-2", data: { confirm: "本当に削除しますか?" }, method: :delete %>
              </div>
            <% end %>
          <% end %>
        </div>
        <p class="text-2xl mb-6"><%= @job.name %></p>
        <div class="py-2 flex items-center">
          <span class="material-icons">build</span><p class="ml-2">加工種別：</p><%= @job.category.name %>
          <p class="ml-2">/</p>
          <p class="ml-2"><%= @job.sub_category.name %></p><br>
        </div>
        <div class="py-2 flex items-center">
          <span class="material-icons">location_on</span><p class="ml-2">納品場所：</p><%= @job.place.name %><br>
        </div>
        <div class="py-2 flex items-center">
          <span class="material-icons">schedule</span><p class="ml-2">希望納期：</p><%= @job.deadline.name %><br>
        </div>
        <div class="py-2 flex items-center">
          <span class="material-icons">notes</span><p class="ml-2">備考：</p><%= @job.memo %><br>
        </div>
          <% if @job.job_image? %>
            <div class="py-2 flex items-center">
              <span class="material-icons">photo_camera</span><p class="ml-2">参考画像：</p>
            </div>
            <div class="py-2 flex justify-center border-4">
              <%= image_tag @job.job_image.url %>
            </div>
          <% else %>
            <div class="py-2 flex items-center">
              <span class="material-icons">photo_camera</span><p class="ml-2">参考画像：画像は登録されていません</p>
            </div>
          <% end %>
        <div class="flex justify-between">
          <div class="pt-4 flex items-center">
            <span class="material-icons">contact_support</span><p class="ml-2">問い合わせ先：</p><%= @job.contact %><br>
          </div>
          <div class="flex items-center pt-4">
            <% if user_signed_in? %>
              <% if current_user.already_favorited?(@job) %>
                <%= link_to image_tag("star.png", class:"w-6"), job_favorite_path(@job), method: :delete %>
              <% else %>
                <%= link_to image_tag("star_outline.png", class:"w-6"), job_favorites_path(@job), method: :post %>
              <% end %>
            <% else %>
              <%= link_to image_tag("star_outline.png", class:"w-6"), new_user_session_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-span-1">
      <div class="bg-white rounded-md shadow">
        <div class="p-4 h-auto">
          <div class="flex items-center mb-6">
            <span class="material-icons">person</span>
            <p class="ml-2 text-2xl">依頼者</p>
          </div>
          <div class="flex justify-center mb-6">
            <% if @job.user.profile_image? %>
              <%= image_tag @job.user.profile_image.url, class: "w-16" %>
            <% else %>
              <%= image_tag avatar_url(@job.user), class: "w-16" %>
            <% end %>
          </div>
          <%= link_to user_path(@job.user) do %>
            <div class="mb-4 flex justify-center">
              <p class="hover:underline text-xl"><%= @job.user.name %>さん</p>
            </div>
          <% end %>
            投稿日時：<%= @job.created_at.to_s(:datetime_jp) %>
        </div>
      </div>
      <% if user_signed_in? && current_user.id == @job.user_id %>
        <div class="bg-white rounded-md shadow my-4">
          <div class="p-4 h-auto">
            <div class="flex items-center mb-6">
              <span class="material-icons">manage_search</span>
              <p class="ml-2 text-2xl">契約の管理</p>
            </div>
            <% if current_user.already_ordered?(@job) %>
              <div class="flex items-center py-2">
                <p>契約済みの依頼として保存済み</p>
              </div>
            <% else %>
              <p>発注をした場合は下記ボタンを押してください。契約済みの依頼として保存されます。</p>
              <div class="flex items-center pt-6">
                <%= link_to "契約済みの依頼として保存する", job_contracts_path(@job), class:"p-2 rounded-lg bg-green-500 text-white hover:bg-green-700", method: :post%>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-span-2 bg-white rounded-md shadow">
      <div class="p-4 h-auto">
        <div class="my-2">
          <% if user_signed_in? %>
            <%= link_to "コメントする", new_job_comment_path(@job), class:"p-3 rounded-md bg-blue-500 text-white hover:bg-blue-700" %><br>
          <% else %>
            <%= link_to "コメントする", new_user_session_path, class:"p-2 rounded-lg bg-blue-500 text-white hover:bg-blue-700"%>
          <% end %>
        </div>
        <% @comment.each do |comment|%>
          <div class="py-2 h-auto divide-y divide-gray-400">
            <div class="flex justify-between my-4">
              <%= link_to user_path(comment.user.id) do %>
                <div class="flex display-start items-center">
                  <% if comment.user.profile_image? %>
                    <%= image_tag comment.user.profile_image.url, class: "w-8" %>
                  <% else %>
                    <%= image_tag avatar_url(comment.user), class: "w-8" %>
                  <% end %>
                  <div class="ml-2">
                    <%= comment.user.name %>さん
                  </div>
                </div>
              <% end %>
              <% if current_user == comment.user %>
                <div class="bg-gray-500 h-8 rounded-md flex items-center">
                  <%= link_to image_tag("delete.png", class:"w-6"), job_comment_path(@job, comment), class: "p-2", data: { confirm: "本当に削除しますか?" }, method: :delete %>
                </div>
              <% end %>
            </div>
            <%= comment.content %>
          </div>
         <hr>
        <% end %>
      </div>
    </div>
    <div class="col-span-2 flex justify-center">
      <div class="bg-gray-500 w-auto rounded-md">
        <%= link_to "トップページに戻る", root_path, class:"p-4 text-white" %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>