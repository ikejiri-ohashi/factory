<% if company_profile.nil? %>
  <div class="p-4 h-auto">
    <p class="text-sm text-gray-500">プロフィールはまだ登録されていません</p>
  </div>
  <% if user_signed_in?%>
    <% if @params_id == current_user.id %>
      <div class="py-4 flex justify-center">
        <%= link_to "プロフィールを追加する", new_user_company_profile_path(user_id: @params_id), class: "px-3 py-2 text-blue-500 border border-blue-500 font-semibold rounded hover:bg-blue-100", remote: true %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="p-4 h-auto">
    <% if message.present? %>
      <% if message == "create" %>
        <div class="mb-4 flex justify-center rounded-md border-2 border-green-500">
          <span class="material-icons">done</span><p class="mx-2">プロフィールを追加しました</p>
        </div>
      <% elsif message == "update" %>
        <div class="mb-4 flex justify-center rounded-md border-2 border-green-500">
          <span class="material-icons">done</span><p class="mx-2">プロフィールを更新しました</p>
        </div>
      <% end %>
    <% end %>
    <div class="mb-4 p-2 border-4">
      <% if company_profile.category_id != 1 %>
        <p class="text-xl m-2">得意加工：<%= company_profile.category.name %></p>
      <% else %>
        <p class="text-xl m-2">得意加工：</p>
      <% end %>
      <hr>
      <p class="m-2">得意技術について</p>
      <div class="whitespace-pre-line">
        <%= company_profile.content %>
      </div>
    </div>
    <p class="mx-2">企業紹介：</p>
    <div class="whitespace-pre-line pb-4">
      <%= company_profile.self_introduction %>
    </div>
    <hr>
    <div class="m-2">
      <% if company_profile.place_id != 1 %>
        企業所在地：<%= company_profile.place.name %>
      <% else %>
        <p>企業所在地：</p>
      <% end %>
    </div>
    <hr>
    <div class="m-2">
      ホームページ：<%= company_profile.company_url %>
    </div>
    <hr>
    <div class="m-2">
      連絡先：<%= company_profile.contact %>
    </div>
    <hr>
  </div>
  <% if user_signed_in? %>
    <% if @params_id == current_user.id %>
      <div class="py-4 flex justify-center">
        <%= link_to "プロフィールを編集する", edit_user_company_profile_path(user_id: params_id, id: params_id), class: "px-3 py-2 text-blue-500 border border-blue-500 font-semibold rounded hover:bg-blue-100", remote: true %>
      </div>
    <% end %>
  <% end %>
<% end %>