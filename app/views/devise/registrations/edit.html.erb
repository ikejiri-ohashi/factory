<%= render "shared/header" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
<div class="container mx-auto px-8">
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white h-auto p-4 rounded-md shadow">
      <div class="mb-4 flex justify-center">
        <%= image_tag avatar_url(@user), class: "round-md" %>
      </div>
      <div class="mb-4 flex justify-center">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
      <div class="mt-16 mb-4 flex justify-center">
        <%= f.submit "プロフィールを更新する", class: "w-full bg-gray-500 text-white text-center"%>
      </div>
      <div class="mb-2 flex justify-center">
        <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
    <div class="col-span-2 bg-white p-4 rounded-md shadow">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>パスワードを変更する場合のみ入力</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      
    </div>
  </div>
</div>
  <% end %>






<%= render "shared/footer" %>