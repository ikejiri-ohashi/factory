<%= render "shared/header" %>

<div class="container mx-auto px-8">
  <div class="grid grid-cols-2 gap-4">
    <div class="col-span-1 bg-white rounded-md shadow">
      <div class="p-4">
       box1
      </div>
    </div>
    <div class="col-span-1 bg-white rounded-md shadow">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <div class="p-4 h-auto divide-y divide-gray-400 bg-white rounded-md shadow">
          <div class="p-4">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            <div class="form-text">ニックネームを記入してください</div>
          </div>
          <div class="p-4">
            <%= f.label :genre, class:"form-label" %><br />
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form-select"}) %>
            <div class="form-text">ユーザーのジャンルを選択してください</div>
          </div>
          <div class="p-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <div class="form-text">メールアドレスを記入してください</div>
          </div>
          <div class="p-4">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="p-4">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="p-4 flex justify-center">
            <div class="">
              <%= f.submit "新規登録する", class:"p-3 mx-2 rounded-lg bg-blue-500 text-white hover:bg-blue-700" %>
            </div>
            <div class="p-3">
              <%= link_to 'トップページに戻る', root_path, class:"p-3 mx-2 rounded-lg bg-blue-500 text-white hover:bg-blue-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <%# <%= render "devise/shared/links" %>
</div>


<%= render "shared/footer" %>
