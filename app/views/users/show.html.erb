<%= render "shared/header" %>
<div class="container mx-auto lg:px-8 xl:px-36">
  <div id="follow_message">
    <%= render partial: "follows/message", locals: { message: @message } %>
  </div>
  <div class="lg:grid grid-cols-3">
    <div class="col-span-1">
      <div id="user_info">
        <%= render partial: "users/info", locals: { user: @user, company_profile: @company_profile, check_follow: @check_follow } %>
      </div>
      <div class="bg-white rounded-md shadow mt-4 mx-4 hover:rounded-md">
        <div class="request">
          <% if @user == current_user %>
            <div class="accepted_requests rounded-md shadow border-2 border-yellow-300 mx-4 my-4">
              <div class="flex items-center px-4 pt-4">
                <span class="material-icons">announcement</span>
                <p class="ml-2"><b>受け取ったリクエスト</b></p>
              </div>
              <% @got_requests_no_contract = @got_requests.reject{|request| @check_contract.include?(request.job_id)} %>
              <% if @got_requests_no_contract.empty? %>
                <p class="text-sm p-4">リクエストはありません</p>
              <% end %>
              <% @got_requests_no_contract.each do |request|%>
                <%= link_to job_path(request.job_id), data: {"turbolinks" => false} do %>
                  <div class="flex hover:bg-gray-100 active:bg-gray-200 px-4 py-2">
                    <%= request.job.name %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% elsif user_signed_in? %>
            <div id="send_request">
              <%= render partial: "requests/send_request", locals: {current_user_job: @current_user_job, current_user_job: @current_user_job, message: @message} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-span-2">
      <div class="bg-white rounded-md shadow mt-4 mx-4">
        <% if @company_profile.nil? %>
          <div class="p-4 h-auto">
            <p class="text-sm text-gray-500">プロフィールはまだ登録されていません</p>
          </div>
        <% else %>
          <div class="p-4 h-auto">
            <div class="mb-4 p-2 border-4">
              <p class="text-xl m-2">得意加工：<%= @company_profile.category.name %></p>
              <p class="text-ml m-2">得意加工２：<%= @company_profile.sub_category.name %></p>
              <hr>
              <p class="m-2">得意技術について</p>
              <div class="whitespace-pre-line">
                <%= @company_profile.content %>
              </div>
            </div>
            <p class="mx-2">企業紹介：</p>
            <div class="whitespace-pre-line pb-4">
              <%= @company_profile.self_introduction %>
            </div>
            <hr>
            <div class="m-2">
              企業所在地：<%= @company_profile.place.name %>
            </div>
            <hr>
            <div class="m-2">
              ホームページ：<%= @company_profile.company_url %>
            </div>
            <hr>
            <div class="m-2">
              連絡先：<%= @company_profile.contact %>
            </div>
            <hr>
          </div>
        <% end %>
      </div>
      <div class="bg-white rounded-md shadow mt-4 mx-4">
        <div class="grid grid-cols-4">
          <%= link_to user_select_jobs_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
            <div class="bg-gray-100 rounded-tl-md hover:border-b-2 border-blue-500 active:bg-gray-200">
              <div class="flex items-center p-4">
                <p class="mx-auto text-sm">投稿済み</p>
              </div>
            </div>
          <% end %>
          <%= link_to user_select_favorites_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
            <div class="bg-gray-100 hover:border-b-2 border-blue-500 active:bg-gray-200">
              <div class="flex items-center p-4">
                <p class="mx-auto text-sm">お気に入り</p>
              </div>
            </div>
          <% end %>
          <%= link_to user_select_contracts_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
            <div class="bg-gray-100 hover:border-b-2 border-blue-500 active:bg-gray-200">
              <div class="flex items-center p-4">
                <p class="mx-auto text-sm">発注履歴</p>
              </div>
            </div>
          <% end %>
          <%= link_to user_select_accepts_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
            <div class="bg-gray-100 rounded-tr-md hover:border-b-2 border-blue-500 active:bg-gray-200">
              <div class="flex items-center p-4">
                <p class="mx-auto text-sm">受注履歴</p>
              </div>
            </div>
          <% end %>
        </div>
        <div id="select">
          <%= render partial: "users/jobs", locals: { jobs: @jobs, check_contract: @check_contract, send_requests: @send_requests } %>
        </div>
      </div>
    </div>
  </div>
  <div class="py-8 lg:pb-28 flex justify-center">
    <%= link_to "トップページにもどる", root_path, class:"px-3 py-2 text-blue-500 text-xl border border-blue-500 font-semibold rounded hover:bg-blue-100" %>
  </div>
</div>
<%= render "shared/footer" %> 