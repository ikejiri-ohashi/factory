<%= render "shared/header" %>

<div class="container mx-auto px-8">
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white h-64 p-4 rounded-md shadow">
      <div class="mb-4 flex justify-center">
        <%= image_tag avatar_url(@user), class: "round-md" %>
      </div>
      <div class="mb-4 flex justify-center">
        <p class="text-2xl"><%= @user.name %></p>
      </div>
      <% if @user == current_user %>
        <div class="mt-16 flex justify-center">
          <%= link_to "プロフィールを編集する", edit_user_registration_path, class: "w-full bg-gray-500 text-white text-center" %>
        </div>
      <% end %>
    </div>
    <div class="col-span-2 bg-white rounded-md shadow">
      <div class="p-4 h-auto">
        <div class="mb-4">
          プロフィール詳細
        </div>
        <% if @user == current_user %>
          <div class="mb-4">
            <p>
              <%= @user.email %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>