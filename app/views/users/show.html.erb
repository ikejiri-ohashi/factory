<%= render "shared/header" %>

<div class="container mx-auto px-8">
  <div id="follow_message">
    <%= render partial: "follows/message", locals: {message: @message } %>
  </div>
  <div class="grid grid-cols-3 gap-4">
    <div class="bg-white p-4 rounded-md shadow">
      <div class="mb-4 flex justify-center">
        <% if @user.profile_image? %>
          <%= image_tag @user.profile_image.url class: "w-16" %>
        <% else %>
          <%= image_tag avatar_url(@user) %>
        <% end %>
      </div>
      <div class="pt-4 flex justify-center">
        <p class="text-2xl"><%= @user.name %></p>
      </div>
      <% if @user == current_user %>
        <div class="mt-16 flex justify-center">
          <%= link_to "設定を変更する", edit_user_registration_path, class: "px-3 py-2 text-blue-500 border border-blue-500 font-semibold rounded hover:bg-blue-100" %>
        </div>
        <% if @company_profile.nil? %>
          <div class="my-4 flex justify-center">
            <%= link_to "プロフィールを追加する", new_company_profile_path, class: "px-3 py-2 text-blue-500 border border-blue-500 font-semibold rounded hover:bg-blue-100" %>
          </div>
        <% else %>
          <div class="my-4 flex justify-center">
            <%= link_to "プロフィールを編集する", edit_company_profile_path, class: "px-3 py-2 text-blue-500 border border-blue-500 font-semibold rounded hover:bg-blue-100" %>
          </div>
        <% end %>
      <% else %>
        <div id="follow_button">
          <%= render partial: "follows/check_follow", locals: {check_follow: @check_follow, message: @message } %>
        </div>
      <% end %>
    </div>
    <div class="col-span-2 h-auto bg-white rounded-md shadow">
      <% if @company_profile.nil? %>
        <div class="p-4 h-auto">
          プロフィールはまだ登録されていません
        </div>
      <% else %>
        <div class="p-4 h-auto">
          <div class="mb-4 p-2 border-4">
            <p class="text-xl m-2">得意加工：<%= @company_profile.category.name %></p>
            <p class="text-ml m-2">得意加工２：<%= @company_profile.sub_category.name %></p>
            <hr>
            <div class="mt-2">
              得意技術について：<%= @company_profile.content %>
            </div>
          </div>
          <div class="m-2">
            企業紹介：<%= @company_profile.self_introduction %>
          </div>
          <hr>
          <div class="m-2">
            企業所在地：<%= @company_profile.place.name %>
          </div>
          <hr>
          <div class="m-2">
            ホームページ：<%= @company_profile.company_url %>
          </div>
          <hr>
          <div class="m-2">
            連絡先：<%= @company_profile.contact %>
          </div>
          <hr>
        </div>
      <% end %>
    </div>
  </div>
  <div class="grid grid-cols-3 gap-x-4">
    <div class="bg-white rounded-t-md shadow mt-4 flex">
      <div class="h-auto w-6/12 m-2">
        <div class="p-2">
          <p class="text-base ml-2">フォロー中</p>
          <hr>
        </div>
        <% @follows.each do | user |%>
          <div class="flex display-start items-center m-2">
            <%= link_to user_path(user.follow_id), data: {"turbolinks" => false} do %>
              <% if user.follow.profile_image? %>
                <%= image_tag user.follow.profile_image.url, class: "w-8" %>
              <% else %>
                <%= image_tag avatar_url(user.follow), class: "w-8" %>
              <% end %>
            <% end %>
            <%= link_to user_path(user.follow_id), data: {"turbolinks" => false} do %>
              <p class="ml-2 text-sm hover:underline"><%= user.follow.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="h-auto w-6/12 m-2">
        <div class="p-2">
          <p class="text-base ml-2">フォロワー</p>
          <hr>
        </div>
        <div id="follower_index">
          <%= render partial: "follows/follows", locals: {followers: @followers } %>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-t-md shadow mt-4 p-2">
      <div class="p-2 flex items-center">
        <span class="material-icons">done</span>
        <p class="ml-2">発注した仕事</p>
      </div>
      <% @contracts.each do |contract| %>
        <div class="flex h-auto">
          <%= link_to job_path(contract.job_id), data: {"turbolinks" => false} do %>
            <p class="p-2 hover:underline"><%= contract.job.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="bg-white rounded-t-md shadow mt-4 p-2">
      <div class="p-2 flex items-center">
        <span class="material-icons">task</span>
        <p class="ml-2">受注した仕事</p>
      </div>
      <% @accepts.each do |accept|%>
        <div class="flex h-auto">
          <%= link_to job_path(accept.job_id), data: {"turbolinks" => false} do %>
            <p class="p-2 hover:underline"><%= accept.job.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="bg-white rounded-b-md shadow p-2 border-t">
      <% if @user == current_user %>
        <div class="p-2 flex items-center">
          <span class="material-icons">announcement</span>
          <p class="ml-2">受け取ったリクエスト</p>
        </div>
        <% @got_requests.each do |request|%>
          <% unless @check_contract.include?(request.job_id)%>
            <div class="flex h-auto">
              <%= link_to job_path(request.job_id), data: {"turbolinks" => false} do %>
                <p class="p-2 hover:underline"><%= request.job.name %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="bg-white rounded-b-md shadow p-2 border-t">
      <div class="p-2 flex items-center">
        <span class="material-icons">work</span>
        <p class="ml-2">募集中の仕事</p>
      </div>
      <% @jobs.each do | job |%>
        <div class="flex items-center h-auto">
          <% unless @check_contract.include?(job.id)%>
            <%= link_to job_path(job.id), data: {"turbolinks" => false} do %>
              <p class="p-2 hover:underline"><%= job.name %></p>
            <% end %>
            <% if @send_requests.include?(job.id)%>
              <span class="material-icons">send</span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="bg-white rounded-b-md shadow p-2 border-t">
      <div class="p-2 flex items-center">
        <%= image_tag("star.png", class:"w-6") %>
        <p class="ml-2">お気に入りした仕事</p>
      </div>
      <% @favorites.each do | favorite |%>
        <div class="flex items-center h-auto">
        <%= link_to job_path(favorite.job_id), data: {"turbolinks" => false} do %>
          <p class="p-2 hover:underline"><%= favorite.job.name %></p>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="py-4 flex justify-center">
    <%= link_to "トップページに戻る", root_path, class:"px-3 py-2 text-blue-500 text-xl border border-blue-500 font-semibold rounded hover:bg-blue-100" %>
  </div>
</div>

<%= render "shared/footer" %> 