<div class="grid grid-cols-4">
  <%= link_to user_select_jobs_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 rounded-tl-md h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">投稿した依頼</p>
      </div>
    </div>
  <% end %>
  <%= link_to user_select_favorites_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">お気に入り</p>
      </div>
    </div>
  <% end %>
  <%= link_to user_select_contracts_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-white h-auto border-b-2 border-white">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">発注した依頼</p>
      </div>
    </div>
  <% end %>
  <%= link_to user_select_accepts_path(user_id: params[:id]), data: {"turbolinks" => false}, method: :get, remote: true do %>
    <div class="bg-gray-100 rounded-tr-md h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
      <div class="flex items-center p-4">
        <p class="mx-auto text-sm">受注した依頼</p>
      </div>
    </div>
  <% end %>
</div>
<div class="contracts pb-2">
  <div class="flex items-center px-4 pt-4">
    <span class="material-icons">done</span>
    <p class="ml-2"><b>他ユーザーに発注した依頼</b></p>
  </div>
  <% if contracts.empty? %>
    <div class="flex px-4 py-2 hover:bg-gray-50">
      <p class="text-sm text-gray-400">募集終了した投稿はありません</p>
    </div>
  <% end %>
  <% contracts.each do |contract| %>
    <%= link_to job_path(contract.job_id), data: {"turbolinks" => false} do %>
      <div class="flex px-4 py-2 hover:bg-gray-50 active:bg-gray-100">
        <%= contract.job.name %>
      </div>
    <% end %>
  <% end %>
</div>