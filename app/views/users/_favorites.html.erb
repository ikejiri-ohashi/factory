<div class="grid grid-cols-4">
  <div class="bg-gray-100 h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
    <div class="flex items-center p-4">
      <p class="ml-2 text-md">投稿した依頼</p>
    </div>
  </div>
  
    <div class="bg-white rounded-tl-md h-auto border-b-2 border-white">
      <div class="flex items-center p-4">
        <p class="ml-2 text-md">お気に入り</p>
      </div>
    </div>
  
  <div class="bg-gray-100 h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
    <div class="flex items-center p-4">
      <p class="ml-2 text-md">発注した依頼</p>
    </div>
  </div>
  <div class="bg-gray-100 rounded-tr-md h-auto hover:border-b-2 border-blue-500 active:bg-gray-200">
    <div class="flex items-center p-4">
      <p class="ml-2 text-md">受注した依頼</p>
    </div>
  </div>
</div>
<div class="favorite">
  <div class="flex items-center px-4 pt-4">
    <%= image_tag("star.png", class:"w-6") %>
    <p class="ml-2"><b>お気に入りした依頼</b></p>
  </div>
  <% if favorites.empty? %>
    <div class="flex px-4 py-2 hover:bg-gray-50">
      <p class="text-sm text-gray-400">お気に入りした依頼はありません</p>
    </div>
  <% end %>
  <% favorites.each do | favorite |%>
    <%= link_to job_path(favorite.job_id), data: {"turbolinks" => false} do %>
      <div class="flex items-center px-4 py-2 hover:bg-gray-50 active:bg-gray-100 hover:rounded-md">
        <p class="mr-2"><%= favorite.job.name %></p>
      </div>
    <% end %>
  <% end %>
</div>